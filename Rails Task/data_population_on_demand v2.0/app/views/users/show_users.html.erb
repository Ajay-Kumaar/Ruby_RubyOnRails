<div>
<h1>List of Users</h1>
<br><br>
<% if (@users.size >= 1) %>
  <table>
    <tr>
      <th>S.No.</th>
      <th>Jid</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.jid %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.address %></td>
      </tr>
    <% end %>
  </table>
  <br><br>
<% else %>
  <table id="no_data_table">
    <tr>
      <th>S.No.</th>
      <th>Jid</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
    </tr>
    <tr>
      <td colspan="6">Currently there are no user data to display</td>
    </tr>
  </table>
  <br><br>
<% end %>

<%= form_tag users_path, method: :get do %>  
  <%= submit_tag "Home" %>
<% end %>

</div>